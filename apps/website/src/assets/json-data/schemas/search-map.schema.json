{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "entries": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "enum": ["page", "resource"]
          },
          "url": {
            "type": "string",
            "description": "URL of the resource"
          },
          "title": {
            "type": "string",
            "description": "Title of the resource"
          },
          "keywords": {
            "type": "array",
            "minLength": 1,
            "items": {
              "type": "string",
              "description": "Keywords to match for"
            }
          }
        },
        "required": ["url", "keywords", "title", "id"],
        "additionalProperties": false
      }
    }
  },
  "required": ["entries"],
  "additionalProperties": false
}

